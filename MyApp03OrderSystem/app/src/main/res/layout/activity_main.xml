<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jaký kaktus si chceš objednat?"
        android:textSize="20dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/green"
        android:layout_marginBottom="20dp"/>

    <RadioGroup
        android:id="@+id/radio_group_kaktus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/kaktus_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kaktus 1"/>

        <RadioButton
            android:id="@+id/kaktus_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kaktus 2"/>

        <RadioButton
            android:id="@+id/kaktus_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kaktus 3"/>
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkbox_better_fork"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Víc pichlavý"/>

    <CheckBox
        android:id="@+id/checkbox_better_saddle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hezčí vzhled do kanceláře"/>

    <CheckBox
        android:id="@+id/checkbox_carbon_handlebar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Moderní vzhled"/>

    <Button
        android:id="@+id/btn_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Objednat kaktus"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/green"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Souhrn objednávky:"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/image_bike"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/kaktus1"/>
</LinearLayout>